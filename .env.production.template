# Production Environment Variables Template for Users Service
# Copy this to .env.production and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://users_admin:your_secure_password@your_db_host:5432/users_db?schema=public

# RabbitMQ Configuration
RABBITMQ_URL=amqp://your_user:your_pass@your_rabbitmq_host:5672

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=your_bucket_name

# Service Configuration
API_VERSION=v1
LOG_LEVEL=info
CORS_ORIGIN=https://your-frontend-domain.com
PORT=3000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10s