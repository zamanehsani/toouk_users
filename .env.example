# Database Configuration for Users Service
DATABASE_URL="postgresql://users:secure_password@localhost:5432/name_db?schema=public"

# Application Configuration
NODE_ENV=development
PORT=3000

# Database Connection Details (for reference)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=name_db
DB_USER=users
DB_PASSWORD=secure_password

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here

# API Configuration
API_VERSION=v1

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# AWS S3 Configuration for Avatar Uploads
AWS_ACCESS_KEY_ID=your_aws_access_key_id
